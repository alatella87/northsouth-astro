---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    type: "Solutions",
    services: ["web", "e-shop", "cms", "erp"],
    color: "black",
    description:
      "Soluzioni tailor-made per la tua azienda, associazione, fondazione. Ventaglio di opzioni ad-hoc ed integrazioni.",
    icon: "bx:bxs-briefcase",
  },
  {
    type: "Strategy",
    services: ["strategia", "contenuto", "UX"],
    color: "#4f46e5",
    description:
      "Approccio partecipativo alla creazione di valore, design-thinking, CX/UX Benchmarking.",
    icon: "bx:bxs-window-alt",
  },
  {
    type: "Knowledge",
    services: ["knowledge management", "workshops"],
    color: "#0900a6",
    description:
      "Gestione delle conoscenze aziendali, implementazione sistemi di gestione conoscenza.",
    icon: "bx:bxs-window-alt",
  },
];
---

<!-- <div class="mt-16 md:mt-0">
  <h2 class="text-2xl lg:text-3xl xl:text-4xl font-bold lg:tracking-tight">
    Il tuo spazio cliente, on-demand.
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Offriamo soluzioni on-demand. Quando vuoi tu, cliente.
  </p>
</div> -->
<div class="grid sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 mt-16 gap-16">
  {
    features.map((feature) => (
      <a
        style={{ backgroundColor: feature.color }}
        href="#"
        class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-500">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-white dark:text-white">
          Northsouth<span class="font-thin"> {feature.type}</span>
        </h5>
        <div class="my-4">
          {feature.services.map((service) => (
            <span class="inline-flex items-center rounded-md bg-blue-50 px-4 py-1 mb-2 mr-2 text-sm font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
              {service}
            </span>
          ))}
        </div>
        <span class="text-gray-300">{feature.description}</span>
      </a>
    ))
  }
</div>
